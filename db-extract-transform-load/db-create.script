DROP SCHEMA PUBLIC CASCADE

CREATE MEMORY TABLE CUSTOMERS (USERNAME VARCHAR(50) NOT NULL PRIMARY KEY, FIRSTNAME VARCHAR(50) NOT NULL, LASTNAME VARCHAR(50) NOT NULL)
CREATE MEMORY TABLE ORDERS (ORDERNUMBER INTEGER NOT NULL PRIMARY KEY, USERNAME VARCHAR(50) NOT NULL, STATUS INTEGER NOT NULL, NET DOUBLE NOT NULL, TOTAL DOUBLE NOT NULL, ORDDATE DATE NOT NULL)
CREATE MEMORY TABLE ORDERITEMS (ORDERNUMBER INTEGER NOT NULL, QUANTITY INTEGER NOT NULL, PRODUCT INTEGER NOT NULL, TITLE VARCHAR(50) NOT NULL, PRICE DOUBLE NOT NULL)
